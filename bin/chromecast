#!/usr/bin/env php
<?php
$files = array(
  __DIR__ . '/../vendor/autoload.php',
);
var_dump($files);
$found = false;
foreach ($files as $file) {
    if (file_exists($file)) {
        require $file;
        $found = true;
        break;
    }
}

if (!$found) {
    die(
      'Composer autoload not found:' . PHP_EOL 
    );
}

$host = $argv[1];

$cc = new \jalder\Upnp\Chromecast\Console($host);
$cc->run();

